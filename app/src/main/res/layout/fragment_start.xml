<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gravity"
    >

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ebusiness.org.fragments.ProfileFragment">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="659dp" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="ebusiness.org.activities.ProfileActivity"
            >

            <!-- Tabelle 1 Header -->
            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tabelle1"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <!-- Column 1 -->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:id="@+id/imageView"
                        android:src="@drawable/logohw"
                        />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_below="@+id/tabelle1"
                android:weightSum="1"
                android:id="@+id/tabelle7">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/startTable"
                    android:layout_weight="0.77">


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|center"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Herzlich Willkommen \nbei Running Dinner!"
                            android:id="@+id/welcomeText"
                            android:layout_column="26"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#1875ac"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="75dp"
                            android:layout_marginTop="10dp"
                            android:text="Was ist RuDi?"
                            android:id="@+id/bAbout"
                            android:layout_column="26"
                            android:layout_weight="1"
                            android:textSize="16dp"
                            android:background="#1875ac"
                            android:textColor="#ffffff"
                            android:textStyle="bold"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="75dp"
                            android:text="RuDi suchen"
                            android:id="@+id/bEventFinden"
                            android:layout_column="26"
                            android:layout_weight=".5"
                            android:textSize="16dp"
                            android:background="#1875ac"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="75dp"
                            android:text="RuDi anlegen"
                            android:id="@+id/bCreateRuDi"
                            android:layout_column="26"
                            android:layout_weight=".5"
                            android:textSize="16dp"
                            android:background="#1875ac"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="75dp"
                            android:text="Dein Profil"
                            android:id="@+id/bProfil"
                            android:layout_column="26"
                            android:layout_weight=".5"
                            android:textSize="16dp"
                            android:background="#1875ac"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />
                    </TableRow>
                </TableLayout>

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>
</ScrollView>