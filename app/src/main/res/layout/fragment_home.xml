<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:id="@+id/imageHW"
            android:src="@drawable/cook"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            />

        <!-- Tabelle 1 Herzlich Willkommen -->
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tabelle1"
            android:layout_below="@+id/imageHW"
            android:layout_margin="0dp"
            >

            <View android:layout_height="2px" android:background="#b6b6b4"/>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="left"
                android:layout_margin="10dp"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/cook"
                    android:layout_margin="0dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="left"/>


                <!-- Column 2 -->
                <TextView
                    android:id="@+id/textRegister3"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="Kochen"
                    android:textColor="#1875ac"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center|center"
                    />

            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/textExplain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="Drei Gänge kreuz und quer durch Deine Stadt. Spaß mit Deinen Freunden und neuen Leuten. Kochen und Essen bei Dir zu Hause und woanders. \n\nGekocht wird in 2er Teams und jeder Gang wird in einer anderen Küche serviert."
            android:textColor="#333333"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:gravity="center|left"
            android:layout_below="@+id/tabelle1"
            />

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tabelle2"
            android:layout_below="@+id/textExplain"
            android:layout_margin="0dp"
            >
            <View android:layout_height="2px" android:background="#b6b6b4"/>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="left"
                android:layout_margin="10dp"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/eating"
                    android:layout_margin="0dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="left"/>


                <!-- Column 2 -->
                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="Essen"
                    android:textColor="#1875ac"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center|center"
                    />

            </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="fill_parent"
            android:id="@+id/textExplain1"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="Melde Dich an, suche Dir ein Running Dinner aus und lerne mit einem netten Kochpartner gemeinsam neue Leute aus Deiner Stadt kennen. \n\nZusammen könnt ihr Eure persönliche Route starten und fremde Küchen rocken. Und Euch über das Lob der eigenen Gäste freuen."
            android:textColor="#333333"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:gravity="center|left"
            android:layout_below="@+id/tabelle2"
            />

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tabelle3"
            android:layout_below="@+id/textExplain1"
            android:layout_margin="0dp"
            >
            <View android:layout_height="2px" android:background="#b6b6b4"/>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="left"
                android:layout_margin="10dp"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/party"
                    android:layout_margin="0dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="left"/>


                <!-- Column 2 -->
                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="Party"
                    android:textColor="#1875ac"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center|center"
                    />

            </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="fill_parent"
            android:id="@+id/textExplain2"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="Die After-Dinner-Party ist Deine Chance, alle Teilnehmer wiederzusehen und gleichzeitig bei cooler Musik und lässigen Drinks zu feiern, Rezepte austauschen oder Nachtreffen zu planen."
            android:textColor="#333333"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:gravity="center|left"
            android:layout_below="@+id/tabelle3"
            />


    </RelativeLayout>

</ScrollView>