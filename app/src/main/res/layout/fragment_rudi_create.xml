<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gravity"
    >

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context="de.rudi.fragments.RudiCreateFragment">

        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="15dp"
        android:layout_below="@+id/tabelle1">

            <!-- Tabelle 1  -->
            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tabelle1"
                >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <!-- Column 1 -->
                    <TextView
                        android:id="@+id/textRegister"
                        android:layout_height="100dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Running Dinner"
                        android:textColor="#008aff"
                        android:textSize="34dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center|center"
                        android:paddingLeft="15dp"
                        />

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="100dp"
                        android:id="@+id/imageView"
                        android:src="@drawable/eating"
                        android:paddingRight="15dp"
                        />
                </TableRow>
            </TableLayout>

            <!-- Tabelle 2  -->
            <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_below="@+id/tabelle1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:text="Daten zu deinem Running Dinner:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/thema"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:hint="Thema"
                android:padding="5dip"
                android:textColorHint="#393a38"
                android:gravity="center"
                android:background="@drawable/back"
                android:layout_marginTop="15dp"
                />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/datum"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:hint="Datum"
                        android:editable="false"
                        android:textColorHint="#393a38"
                        android:gravity="center"
                        android:background="@drawable/back"
                        />

                    <EditText
                        android:id="@+id/uhrzeit"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:hint="Uhrzeit"
                        android:editable="false"
                        android:textColorHint="#393a38"
                        android:gravity="center"
                        android:background="@drawable/back"
                        />
            </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    >

                    <!-- Column 1 Straße -->
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:inputType="text"
                        android:id="@+id/strasseInput"
                        android:hint="Straße"
                        android:textColorHint="#393a38"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/imageView"
                        android:textSize="16dip"
                        android:typeface="normal"
                        android:background="@drawable/back"/>

                    <!-- Column 2 Hausnummer -->
                    <EditText
                        android:layout_width="75dp"
                        android:layout_height="40dp"
                        android:inputType="text"
                        android:id="@+id/hausnummerInput"
                        android:hint="Nr."
                        android:textColorHint="#393a38"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:textSize="16dip"
                        android:typeface="normal"
                        android:background="@drawable/back"
                        android:layout_marginLeft="10dp"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow23"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <!-- Column 1 PLZ -->
                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:inputType="number"
                        android:id="@+id/plzInput"
                        android:hint="PLZ"
                        android:textColorHint="#393a38"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/imageView"
                        android:textSize="16dip"
                        android:typeface="normal"
                        android:background="@drawable/back" />

                    <!-- Column 2 Stadt -->
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:inputType="text"
                        android:id="@+id/stadtInput"
                        android:hint="Stadt"
                        android:textColorHint="#393a38"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:textSize="16dip"
                        android:typeface="normal"
                        android:background="@drawable/back"
                        android:layout_marginLeft="10dp"/>
                </TableRow>

            <EditText
                android:id="@+id/beschreibung"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:hint="Beschreibung"
                android:inputType="textMultiLine"
                android:padding="5dip"
                android:textColorHint="#393a38"
                android:background="@drawable/back"
                android:gravity="left|center_horizontal"
                />

            <TextView
                android:id="@+id/eigenschaftenHeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:text="Was zeichnet Dein Rudi aus?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp">

                <RadioGroup
                    android:id="@+id/eigenschaftenRadioGroup"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/normalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="normal"
                        android:textColor="#000000"
                        />

                    <RadioButton
                        android:id="@+id/vegetarischButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:checked="false"
                        android:text="vegetarisch"
                        android:textColor="#000000"
                        />

                    <RadioButton
                        android:id="@+id/veganButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:checked="false"
                        android:text="vegan"
                        android:textColor="#000000"
                        />
                </RadioGroup>

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <CheckBox
                        android:id="@+id/laktosefreiCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="laktosefrei"
                        />

                    <CheckBox
                        android:id="@+id/fruktosefreiCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="fruktosefrei"
                        />

                    <CheckBox
                        android:id="@+id/glutenfreiCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="glutenfrei"
                        />
                </TableLayout>
            </TableRow>

            <TextView
                android:id="@+id/gangHeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:text="Wähle Deinen Gang und Helfer!"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                />

            <RadioGroup
                android:id="@+id/gaengeRadioGroup"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/vorspeiseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:checked="false"
                    android:text="Vorspeise"
                    android:textColor="#000000"
                    />

                <RadioButton
                    android:id="@+id/hauptspeiseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:text="Hauptspeise"
                    android:textColor="#000000"
                    />

                <RadioButton
                    android:id="@+id/nachspeiseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:text="Nachspeise"
                    android:textColor="#000000"
                    />
            </RadioGroup>

            <EditText
                android:id="@+id/gericht"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/back"
                android:ems="10"
                android:hint="Gericht"
                android:padding="5dip"
                android:textColorHint="#393a38"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/kuechenhilfe"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/back"
                android:hint="Name Deiner Küchenhilfe"
                android:padding="5dip"
                android:textColorHint="#393a38"
                android:gravity="center"
                />
            </TableLayout>

            <Button
                android:id="@+id/rudiAnlegenButton"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:text="RuDi anlegen"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="#140033"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textExplain"
                android:textSize="16dp"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                />
        </LinearLayout>
    </FrameLayout>
</ScrollView>
